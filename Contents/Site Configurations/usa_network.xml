<?xml version="1.0" encoding="UTF-8"?>
<site site="http://www.usanetwork.com"
	    plugin="http://www.usanetwork.com/outlet/rewind_as3.swf"
			initialState="playing"
			version="1.0">
	
	
	<crop x="24" y="18" width="672" height="378" />
	
	<seekbar type="simple">
		<start x="112" y="410" />
		<end   x="522" y="410" />
		<played>
				<color rgb="99ccff" />
		</played>
	</seekbar>
	
	<!-- PLAYING -->
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="62" y="415" />
				<goto state="paused" />
			</action>
		</event>
		
		<!-- Video ends -->
		<event>
			<condition>
				<url matches="http://www.nbc.com/video/library/" />
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
	</state>
	
	<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="62" y="415" />
				<goto state="playing" />
			</action>
		</event>
	</state>
</site>